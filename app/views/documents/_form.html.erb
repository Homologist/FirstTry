    <%= form.label :author %>
	<%= form.text_field :author, id: :document_author, :required => true %>
  </div>

  <div class="field">
    <%= form.label :media %>
	<%= form.file_field :media, id: :media, :required => true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
